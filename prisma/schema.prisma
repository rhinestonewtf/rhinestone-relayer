datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ClaimRequest {
  id                  Int          @id @default(autoincrement())
  fee                 BigInt
  claimRecipient      String
  solverExpiry        Int
  sourceChainId       Int
  targetChainId       Int
  sourceTokenAddress  String
  targetTokenAddress  String
  expiryTimestamp     Int
  orchestrator        String
  nonce               String
  userData            String
  amount              BigInt
  maxFee              BigInt
  UserAccountId       Int
  UserAccount         UserAccount @relation(fields: [UserAccountId], references: [id])
  status              String

  @@unique([UserAccountId, nonce]) // Ensures unique combination of UserAccountId and nonce
}

model UserAccount {
  id                 Int          @id @default(autoincrement())
  chainId            Int
  accountLocker       String         
  accountOwner        String
  lockerOwner         String
  pendingClaimRequests ClaimRequest[]

  @@unique([accountLocker, chainId]) // Ensures unique combination of UserAccountId and nonce
}